<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jitenderpal.xpensemanager.OnBoardScreen"
    android:background="@drawable/gradient_onboardscreen">


    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:fontFamily="@font/appnamefont"
        android:text="XpenseManager"
        android:textColor="#fff"
        android:textSize="45sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_edittext_onboard"
        android:ems="10"
        android:textColorHint="#BEBEBE"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:gravity="center_horizontal"
        android:hint="Your Name Goes Here"
        android:inputType="textPersonName"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/transparent_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Lets Start"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="All your expenses at one place"
        android:textColor="#fff" />
</RelativeLayout>
